
FROM rustembedded/cross:arm-unknown-linux-gnueabihf


RUN dpkg --add-architecture armhf && \
    apt-get update && \
    apt-get install -y libgstreamer1.0-dev:armhf libgstreamer-plugins-base1.0-dev:armhf libssl-dev:armhf \
    gstreamer1.0-plugins-base:armhf gstreamer1.0-plugins-good:armhf \
      gstreamer1.0-plugins-bad:armhf gstreamer1.0-plugins-ugly:armhf \
      gstreamer1.0-libav:armhf libgstrtspserver-1.0-dev:armhf libges-1.0-dev:armhf


ENV PKG_CONFIG_PATH=/usr/lib/arm-linux-gnueabihf/pkgconfig \
    QEMU_LD_PREFIX=/usr/arm-linux-gnueabihf \
    CC_arm-unknown-linux-gnueabihf=arm-linux-gnueabihf-gcc \
    CXX_arm-unknown-linux-gnueabihf=arm-linux-gnueabihf-g++ \
